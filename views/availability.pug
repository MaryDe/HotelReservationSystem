extends layout.pug

block content
  main(role="main")

    div.onevh.mb-0.background1
      div.container

        div.row.pagespacer

        div.row
          div.col
            h1.display-3 Available Rooms
            p Displaying availability between #{arrivalDate} and #{departureDate}

        //- Loop over db query results
        each entry in query

          div.row.mb-3
            div.col-md-4.bg-light095.pt-3.pb-3.order-md-2
              img.img-fluid(src='/images/2.jpg')
            div.col-md-8.bg-light095.pt-3.pb-3.order-md-1
              h2= entry.roomType
              p= entry.description
              p Only #{entry.availability} available for your selected dates
              form(action="/bookings?arr=" + arrivalDate + "?dep=" + departureDate + "?rty=" + entry.roomType method="post")
                button.btn.btn-info(type="submit") Book for â‚¬ #{entry.roomRate} / night
              small You'll still have a chance to check your details

        div.row.pagespacer
